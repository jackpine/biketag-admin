<h2>
  {{#link-to 'spots.spot' model}}Spot {{model.id}} - {{model.formattedCreatedAt}}{{/link-to}}
</h2>

<img src="{{model.imageUrl}}" />
<p>
  <strong>captured at:</strong> {{model.createdAt}} <br />
  <strong>location:</strong> {{model.formattedLocation}} <br />
</p>

<h3>Guesses</h3>
<ol>
{{#each guess in model.guesses}}
  <li>
    {{#link-to 'guesses.guess' model}}
      <h2>Guess {{guess.id}} - {{guess.formattedCreatedAt}}</h2>
    {{/link-to}}
    <strong>guessed at:</strong> {{guess.createdAt}} <br />
    <strong>location:</strong> {{guess.formattedLocation}} <br />
    <strong>distance from spot:</strong> {{guess.distance}} <br />
  </li>
{{/each}}
</ol>

