<div class="header">
  {{#link-to 'guesses.guess' model}}
    {{model.id}}: {{model.userName}} was
    {{#if model.correct}}
      right!
    {{/if}}
    {{#if model.incorrect}}
      wrong.
    {{/if}}

  {{/link-to}}
</div>
